<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGrey"
    android:orientation="vertical"
    tools:context="com.hocrox.worldwidecdln.driverdetail.DriverProfileActivity">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"

        android:layout_height="200dp">

        <ImageView
            android:id="@+id/ivBackProfile"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/driver_menu" />

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/driver_menu"
            android:orientation="vertical"
            app:layout_anchor="@id/ivBackProfile"
            app:layout_anchorGravity="bottom|center_horizontal">


        </ImageView>


    </android.support.design.widget.CoordinatorLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <com.hocrox.worldwidecdln.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firstName"
                android:textColor="@android:color/black"
                android:textSize="13sp" />


            <com.hocrox.worldwidecdln.utils.CustomEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/white_rectangle"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="12dp"
                android:singleLine="true"
                android:textColorHint="@color/colorgreytext"
                android:textSize="13sp" />

            <com.hocrox.worldwidecdln.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/emailAddress"
                android:textColor="@android:color/black"
                android:textSize="13sp" />


            <com.hocrox.worldwidecdln.utils.CustomEditText
                android:id="@+id/etEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/white_rectangle"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="12dp"
                android:singleLine="true"
                android:textColorHint="@color/colorgreytext"
                android:textSize="13sp" />

            <com.hocrox.worldwidecdln.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/password"
                android:textColor="@android:color/black"

                android:textSize="13sp" />


            <com.hocrox.worldwidecdln.utils.CustomEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/white_rectangle"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="12dp"
                android:singleLine="true"
                android:textColorHint="@color/colorgreytext"
                android:textSize="13sp" />

            <com.hocrox.worldwidecdln.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bankAccount"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"

                android:textSize="13sp" />


            <com.hocrox.worldwidecdln.utils.CustomEditText
                android:id="@+id/etBankAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/white_rectangle"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="12dp"
                android:singleLine="true"
                android:textColorHint="@color/colorgreytext"
                android:textSize="13sp" />

            <com.hocrox.worldwidecdln.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/dob"
                android:textColor="@android:color/black"
                android:textSize="13sp" />


            <com.hocrox.worldwidecdln.utils.CustomEditText
                android:id="@+id/etDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/white_rectangle"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="12dp"
                android:singleLine="true"
                android:textColorHint="@color/colorgreytext"
                android:textSize="13sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.hocrox.worldwidecdln.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/city"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />


                    <com.hocrox.worldwidecdln.utils.CustomEditText
                        android:id="@+id/etCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/white_rectangle"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorgreytext"
                        android:textSize="13sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.hocrox.worldwidecdln.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/phone"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />


                    <com.hocrox.worldwidecdln.utils.CustomEditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/white_rectangle"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorgreytext"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>


            <com.hocrox.worldwidecdln.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/state"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"

                android:textSize="13sp" />


            <com.hocrox.worldwidecdln.utils.CustomEditText
                android:id="@+id/etState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/white_rectangle"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="12dp"
                android:singleLine="true"
                android:textColorHint="@color/colorgreytext"
                android:textSize="13sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.hocrox.worldwidecdln.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/country"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />


                    <com.hocrox.worldwidecdln.utils.CustomEditText
                        android:id="@+id/etCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/white_rectangle"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorgreytext"
                        android:textSize="13sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.hocrox.worldwidecdln.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/zip"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />


                    <com.hocrox.worldwidecdln.utils.CustomEditText
                        android:id="@+id/etZip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/white_rectangle"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorgreytext"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <com.hocrox.worldwidecdln.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/address"
                android:textColor="@android:color/black"
                android:textSize="13sp" />


            <com.hocrox.worldwidecdln.utils.CustomEditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/white_rectangle"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="12dp"
                android:singleLine="true"
                android:textColorHint="@color/colorgreytext"
                android:textSize="13sp" />


            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/blue_recctangle_button"
                android:text="@string/update"
                android:layout_marginBottom="30dp"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>
