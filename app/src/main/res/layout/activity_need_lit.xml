<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/colorBackGrey"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:id="@+id/tvUserMyLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/white_stroke_rectangle"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_location_on_black_24dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:text="@string/useGps"
                    android:textColor="@color/ColorblackText"

                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:id="@+id/tvInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_stroke_rectangle"
                    android:paddingBottom="7dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                   android:textSize="12sp"

                    android:paddingTop="7dp"
                    android:text="Info"
                    android:textColor="@color/ColorblackText" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:id="@+id/tvOneStop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/white_rectangle"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:text="@string/oneStop"
                    android:textColor="@color/colorPrimary" />

                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:id="@+id/tvroundTrip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"

                    android:background="@drawable/white_rectangle"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:text="@string/roundTrip"
                    android:textColor="@color/colorPrimary" />

                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:id="@+id/tvMultiStops"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_rectangle"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:text="@string/multistops"
                    android:textColor="@color/colorPrimary" />


            </LinearLayout>


            <com.hocrox.worldwidecdln.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/white_stroke_rectangle"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textSize="12sp"
                android:text="@string/pickUpLocation"
                android:textColor="@color/ColorblackText" />


            <com.hocrox.worldwidecdln.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:text="Departure Information"
                android:textColor="@color/colorPrimary" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:text="Address"
                    android:textColor="@color/ColorblackText" />

                <com.hocrox.worldwidecdln.utils.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etAddress"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:gravity="start"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/white_rectangle" />


                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="11dp"
                    android:text="Street Name"
                    android:textColor="@color/ColorblackText" />

                <com.hocrox.worldwidecdln.utils.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/white_rectangle"
android:id="@+id/etStreetName"
                    android:textSize="12sp"
                    android:padding="7dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.hocrox.worldwidecdln.utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="9dp"
                            android:text="Street Number"
                            android:textColor="@color/ColorblackText" />

                        <com.hocrox.worldwidecdln.utils.CustomEditText
                            android:id="@+id/etStreetNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/white_rectangle"
                            android:padding="7dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.hocrox.worldwidecdln.utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="9dp"
                            android:text="Zip"
                            android:textColor="@color/ColorblackText" />

                        <com.hocrox.worldwidecdln.utils.CustomEditText
                            android:id="@+id/etZip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/white_rectangle"
                            android:padding="7dp" />


                    </LinearLayout>
                </LinearLayout>


                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginTop="11dp"
                    android:text="Time"

                    android:textColor="@color/ColorblackText" />

                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/white_rectangle"

                    android:id="@+id/tvTime"
                    android:drawableRight="@drawable/calender"
                    android:padding="7dp" />



                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:text="Destination Information"
                    android:textColor="@color/colorPrimary" />



                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                      android:layout_marginTop="10dp"
                    android:text="Address"
                    android:textColor="@color/ColorblackText" />

                <com.hocrox.worldwidecdln.utils.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp"
                    android:id="@+id/tvDestinationAddress"
                    android:textSize="12sp"
                    android:gravity="start"
                    android:background="@drawable/white_rectangle" />
                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="9dp"
                    android:text="Street Name"

                    android:textColor="@color/ColorblackText" />

                <com.hocrox.worldwidecdln.utils.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:id="@+id/etDestinationStreet"
                    android:textSize="12sp"
                    android:background="@drawable/white_rectangle"

                    android:padding="7dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.hocrox.worldwidecdln.utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="9dp"
                            android:text="Street Number"
                            android:textColor="@color/ColorblackText" />

                        <com.hocrox.worldwidecdln.utils.CustomEditText
                            android:id="@+id/etDestinationStreetNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/white_rectangle"
                            android:padding="7dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.hocrox.worldwidecdln.utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="9dp"
                            android:text="Zip"
                            android:textColor="@color/ColorblackText" />

                        <com.hocrox.worldwidecdln.utils.CustomEditText
                            android:id="@+id/etDestinaitonZip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/white_rectangle"
                            android:padding="7dp" />


                    </LinearLayout>
                </LinearLayout>


                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginTop="11dp"
                    android:text="Time"

                    android:textColor="@color/ColorblackText" />

                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/white_rectangle"
                   android:id="@+id/tvDestinationTime"
                    android:drawableRight="@drawable/calender"
                    android:padding="7dp" />

                <Button
                    android:id="@+id/btnContinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/blue_recctangle_button"
                    android:text="Continue"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />



            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</LinearLayout>
