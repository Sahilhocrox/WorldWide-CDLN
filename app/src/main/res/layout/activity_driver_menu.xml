<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hocrox.worldwidecdln.driverdetail.DriverMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/driver_menu"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/app_logo_medium"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorBackGrey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:orientation="vertical"
            android:layout_marginRight="14dp"
            android:layout_marginTop="20dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="2dp"
                android:layout_height="wrap_content">

                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:text="Start PUR"
                    android:gravity="center"
                    android:paddingTop="13dp"
                    android:id="@+id/tvStartPUR"
                    android:textSize="14sp"
                    android:paddingBottom="13dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                app:cardElevation="2dp"

                android:layout_height="wrap_content">

                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:text="Create PUR RT"
                    android:gravity="center"
                    android:paddingTop="13dp"
                    android:id="@+id/tvCreatePUR"
                    android:textSize="14sp"
                    android:paddingBottom="13dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:elevation="3dp"
                android:layout_height="wrap_content">

                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:text="Driver Settings to Driver!"
                    android:gravity="center"
                    android:paddingTop="13dp"
                    android:id="@+id/tvDriverSetting"
                    android:textSize="14sp"
                    android:paddingBottom="13dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                app:cardElevation="2dp"
                android:layout_height="wrap_content">

                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:text="Main Menu"
                    android:gravity="center"
                    android:paddingTop="13dp"
                    android:id="@+id/tvMainMenu"
                    android:textSize="14sp"
                    android:paddingBottom="13dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />


            </android.support.v7.widget.CardView>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>
