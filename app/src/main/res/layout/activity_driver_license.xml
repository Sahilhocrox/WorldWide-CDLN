<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGrey"
    android:orientation="vertical"
    tools:context="com.hocrox.worldwidecdln.driverdetail.DriverInsuranceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.hocrox.worldwidecdln.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/licensePhoto"
                        android:textColor="@color/ColorblackText" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/driver_insurence" />

                    <com.hocrox.worldwidecdln.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="7dp"
                        android:text="@string/takeAPhoto"
                        android:textColor="@color/colorgreytext" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"


                    android:text="License Number"
                    android:textColor="@color/ColorblackText"
                    android:textSize="14sp" />


                <com.hocrox.worldwidecdln.utils.CustomEditText
                    android:id="@+id/etCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/white_rectangle"
                    android:imeOptions="actionNext"
                    android:inputType="text"

                    android:padding="12dp"
                    android:singleLine="true"

                    android:textColorHint="@color/colorgreytext"
                    android:textSize="14sp" />

                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"


                    android:text="License State"
                    android:textColor="@color/ColorblackText"
                    android:textSize="14sp" />


                <com.hocrox.worldwidecdln.utils.CustomEditText
                    android:id="@+id/etInsurancePolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/white_rectangle"
                    android:imeOptions="actionNext"
                    android:inputType="text"

                    android:padding="12dp"
                    android:singleLine="true"

                    android:textColorHint="@color/colorgreytext"
                    android:textSize="14sp" />


                <com.hocrox.worldwidecdln.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"


                    android:text="Expiration Date"
                    android:textColor="@color/ColorblackText"
                    android:textSize="14sp" />


                <com.hocrox.worldwidecdln.utils.CustomEditText
                    android:id="@+id/etEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/white_rectangle"
                    android:imeOptions="actionNext"
                    android:inputType="text"

                    android:padding="12dp"
                    android:singleLine="true"

                    android:textColorHint="@color/colorgreytext"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"

                        android:background="@drawable/blue_recctangle_button"
                        android:text="@string/cancel"
                        android:textColor="@color/colorWhite" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_recctangle_button"
                        android:text="@string/update"
                        android:textColor="@color/colorWhite" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
