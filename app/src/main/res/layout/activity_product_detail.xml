<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGrey"
    android:orientation="vertical"
    tools:context="com.hocrox.worldwidecdln.productdetail.productDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="@color/colorWhite">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/white_stroke_rectangle">

            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/register_back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <com.hocrox.worldwidecdln.utils.CustomTextView
                android:id="@+id/tvProductname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Infint Phone"
                android:textColor="@color/ColorblackText"
                android:textSize="16sp"

                />

            <com.hocrox.worldwidecdln.utils.CustomTextView
                android:id="@+id/tvProductprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="$ 400"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"

                />

            <Button
                android:id="@+id/btnBuyNow"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/blue_recctangle_button"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/buyNow"
                android:textColor="@color/colorWhite" />

            <com.hocrox.worldwidecdln.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Manufacture Warantny ,Fast Shiiping dbsfiuh"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:background="@color/colorWhite">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <com.hocrox.worldwidecdln.utils.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Specifies"
            android:textColor="@color/ColorblackText"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>

    </LinearLayout>
