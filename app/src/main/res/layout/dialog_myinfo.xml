<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_margin="10dp"
    android:layout_height="wrap_content">

 <RelativeLayout
     android:layout_width="wrap_content"
     android:layout_marginTop="10dp"
     android:layout_height="wrap_content">

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="end"
         android:id="@+id/ivClose"
         android:layout_marginRight="20dp"
         android:layout_alignParentRight="true"
         android:background="@drawable/ic_close_black_24dp"
         />
     <com.hocrox.worldwidecdln.utils.CustomTextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:text="@string/worldWideNetworks"

         android:textColor="@color/colorPrimary"
         android:textSize="16sp" />


 </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_root"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <com.hocrox.worldwidecdln.utils.CustomTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="12dp"
            android:id="@+id/tvMakeDefault"
            android:text="@string/makeDefault"
            android:textColor="@color/colorWhite"
            android:background="@drawable/textview_modification"
            />
        <com.hocrox.worldwidecdln.utils.CustomTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="12dp"
            android:id="@+id/tvContinent"
            android:text="@string/addOnContinent"
            android:textColor="@color/colorWhite"
            android:background="@drawable/textview_modification"
            />

    </LinearLayout>

    <com.hocrox.worldwidecdln.utils.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="12dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="12dp"
        android:id="@+id/tvSave"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/save"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/textview_modification"
        />


</LinearLayout>
